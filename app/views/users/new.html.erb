<section class="standard-form">
  <%= render partial: "partials/errors"%>
  <%= form_for @user do  |f| %>
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %>
    <br>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>
  <%end%>
</section>
