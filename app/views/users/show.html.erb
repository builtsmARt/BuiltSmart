<section class="padding-top container">
  <section class="user-profile">
    <h1><%=@user.full_name.capitalize%>'s Profile Page</h1>

  <div class="ar-link">
    <a href="ibuiltbanner://">Use AR with our app!</a><br/>
  </div>
    <div class="user-bookmarks">
      <h3>Bookmarks</h3>
      <ul>
        <%@user.products.each do |product|%>
        <li><%=link_to "#{product.title}", product_url(product.id)%></li>
        <%end%>
      </ul>
    </div>

    <div class="user-reviews">
      <h3>Reviews and Ratings</h3>
      <ul>
        <% @user.reviews.each do |review| %>
        <li><%= link_to "#{review.product.title}", product_path(review.product.id) %>
        - <%= review.difficulty_rating %></li>
        <% end %>
      </ul>
    </div>
  </section>
</section>

<h2>Ikea Product</h2>
<%=@product.product_name %>
<a href="https://docs.google.com/gview?url=http://www.ikea.com<%=@product.pdf_path%>&embedded=true">Assembly Instructions</a>
